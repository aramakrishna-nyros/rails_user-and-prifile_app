<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "form-horizontal product", multipart: true }) do |f| %>
  <%= devise_error_messages! %>
    <div class = "container">
      <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
           <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
              <h1 class="text-center">Sign Up</h1>
          </div>
          <div class="modal-body">
            <form class="form col-md-12 center-block">
              <div class = "form-group">      
                <div class="col-sm-12">  
                  <%= f.email_field :email, autofocus: true, :class => 'form-control input-lg', :placeholder => "Email" %>
                </div>
              </div>
            
              <div class = "form-group">  
                <div class="col-sm-12">     
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off", :class => 'form-control input-lg', :placeholder => "Password" %>
                </div>
              </div>

              <div class = "form-group">  
                <div class="col-sm-12">  
                  <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control input-lg', :placeholder => "conform password" %>
                </div>
              </div>

               <div class="form-group">
                <div class="col-sm-12">
                  <%= f.submit "Sign up", :class => 'btn btn-primary btn-lg btn-block' %><br>
                  <%= link_to 'back', home_index_path, :class => 'btn btn-default' %>
                </div>
              </div>

            </form>
          </div>  
        </div>  
      </div>  
    </div>                  
  </div>
<% end %>

<%= render "devise/shared/links" %>
